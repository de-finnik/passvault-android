<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/content_padding_normal"
    android:background="@drawable/button_border">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@+id/edit_text_edit_pass"
        android:text="@string/pass"
        android:fontFamily="@font/raleway"
        android:textColor="@color/foreground"/>

    <EditText
        android:id="@+id/edit_text_edit_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:inputType="text"
        android:backgroundTint="@color/foreground"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@+id/edit_text_edit_site"
        android:text="@string/site"
        android:fontFamily="@font/raleway"
        android:textColor="@color/foreground" />

    <EditText
        android:id="@+id/edit_text_edit_site"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        android:backgroundTint="@color/foreground" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@+id/edit_text_edit_user"
        android:text="@string/user"
        android:fontFamily="@font/raleway"
        android:textColor="@color/foreground"
        android:backgroundTint="@color/foreground" />

    <EditText
        android:id="@+id/edit_text_edit_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:inputType="text"
        android:backgroundTint="@color/foreground" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:labelFor="@+id/edit_text_edit_other"
        android:text="@string/other"
        android:fontFamily="@font/raleway"
        android:textColor="@color/foreground" />

    <EditText
        android:id="@+id/edit_text_edit_other"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:importantForAutofill="no"
        android:inputType="text"
        android:backgroundTint="@color/foreground" />

    <Button
        android:id="@+id/button_edit_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_border"
        android:text="@string/save" />
</LinearLayout>